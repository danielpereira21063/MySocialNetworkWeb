@model MySocialNetwork.WebUI.Models.ViewModels.LoginViewModel
@{
    Layout = "_Layout_no-navbar";
}

<div class="container">
    <div class="row d-flex justify-content-center vh-100">
        <div class="col-md-8 col-lg-5 m-auto px-1">

            <form class="form-login d-flex flex-column" asp-controller="Account" asp-action="Login">
                <input class="d-none" name="returnUrl"/>
                <input class="d-none" asp-for="ReturnUrl"/>

                <img src="./../img/logo.png" alt="The Daniel´s" class="logo mx-auto">
                <h6 class="text-center fw-bold my-3">
                    Login - The Daniel´s
                </h6>

                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group mb-2">
                    <label>Email</label>
                    <input asp-for="Email" required type="email" class="form-control form-control-sm radius-10" id="floatingInput"
                           placeholder="email@example.com">
                </div>
                <div class="form-group">
                    <label>Senha</label>
                    <input asp-for="Password" required type="password" class="form-control form-control-sm radius-10" id="floatingPassword"
                           placeholder="********">
                </div>
                <a href="" style="font-size: 13px;" class="mb-3 mt-2">Esqueci minha senha</a>

                <button type="submit" class="my-btn bg-orange radius-10 w-100 mt-2">Entrar</button>

                <div class="text-center mt-3" style="font-size: 13px;">
                    <p>
                        Não tem uma conta?
                        <a href="/account/register">Criar conta</a>
                    </p>
                </div>

            </form>
        </div>
    </div>
</div>