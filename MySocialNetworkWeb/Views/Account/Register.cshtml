@{
    Layout = "_Layout_no-navbar";
}

<div class="container">
    <div class="row d-flex justify-content-center vh-100">
        <div class="col-md-8 m-auto">

            <form class="form-login d-flex flex-column">
                <img src="./../img/logo.png" alt="The Daniel´s" class="logo mx-auto">
                <h6 class="text-center fw-bold mt-3 mb-4">
                    Nova conta - The Daniel´s
                </h6>

                <div class="mb-2">
                    <label class="form-label">Nome</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                           placeholder="Nome">
                </div>
                <div class="mb-2">
                    <label for="exampleInputEmail1" class="form-label">Email</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                           placeholder="Endereço de email">
                </div>
                <div class="mb-2">
                    <label for="exampleInputPassword1" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="exampleInputPassword1"
                           placeholder="Informe sua senha">
                </div>
                <div class="mb-2">
                    <label for="exampleInputPassword1" class="form-label">Confirmar senha</label>
                    <input type="password" class="form-control" id="exampleInputPassword1"
                           placeholder="Confirme sua senha">
                </div>

                <div class="col-lg-4">
                    <button class="bg-orange radius-10 mt-2" type="submit">Criar conta</button>

                    <div class="mt-3" style="font-size: 13px;">
                        <p>
                            Já tem uma conta?
                            <a href="">Fazer login</a>
                        </p>
                    </div>
                </div>


            </form>
        </div>
    </div>
</div>
